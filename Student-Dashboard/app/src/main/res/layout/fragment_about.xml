<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.about.AboutFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_width="match_parent"
           android:layout_height="220dp"
           android:scaleType="fitXY"
           android:id="@+id/collageimage"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginHorizontal="@dimen/text_margin"
           android:layout_marginTop="@dimen/text_margin"
           android:fontFamily="@font/latolight"
           android:text="@string/about_collage"
           android:textColor="@color/darkcolor"
           android:textSize="@dimen/text_size"
           android:textStyle="bold" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="@dimen/text_margin"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/label_ic"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Green Enviroment"
              android:textColor="@color/darkcolor"
              android:textSize="@dimen/text_size"
              />

       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="@dimen/text_margin"
           android:fontFamily="@font/latobold"
           android:text="Courses"
           android:textColor="@color/darkcolor"
           android:textSize="@dimen/title_size"
           android:textStyle="bold" />

       <androidx.viewpager.widget.ViewPager
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:foregroundGravity="center"
           android:clipToPadding="false"
           android:overScrollMode="never"
           android:contentDescription="Engineering"
           android:id="@+id/cources"
           android:layout_marginTop="@dimen/text_margin"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:padding="@dimen/text_margin">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/text_margin"
               android:fontFamily="@font/latobold"
               android:text="Contact Details"
               android:textColor="@color/darkcolor"
               android:textSize="@dimen/title_size"
               android:textStyle="bold" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/text_margin"
               android:fontFamily="@font/latobold"
               android:text="Sinhgad Academy of Engineering"
               android:textColor="@color/darkcolor"
               android:textSize="@dimen/title_size"
               android:textStyle="bold" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/text_margin"
               android:fontFamily="@font/latobold"
               android:text="S. No. 40, Kondhwa-Saswad Road ,Kondhwa(Bk) Pune â€“ 411048"
               android:textColor="@color/darkcolor"
               android:textSize="@dimen/title_size"
               android:layout_marginLeft="12dp"
               android:textStyle="bold" />

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="255dp"
               android:padding="20dp"
               android:src="@drawable/img6">
           </ImageView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="@dimen/text_margin"
               android:fontFamily="@font/latobold"
               android:text="Our Collage"
               android:textColor="@color/darkcolor"
               android:textSize="@dimen/title_size"
               android:textStyle="bold" />

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="255dp"
               android:padding="20dp"
               android:id="@+id/map"
               android:src="@drawable/map">
           </ImageView>


       </LinearLayout>

   </LinearLayout>

</androidx.core.widget.NestedScrollView>